<div class="container bg-light">

  <div class="jumbotron jumbotron-fluid bg-danger text-light">
    <div class="container">
      <h1 class="display-4 text-center">Eat-Da-Burger</h1>
      <p class="lead text-center font-weight-bold">Tasty burgers!!!</p>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-md-6">
      <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4160.png" alt="tasty-burger">
    </div>
    <div class="col-md-6">

      <h2 class="text-center addburg">Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="mt-4 btn btn-warning">Add burger</button>
      </form>
    </div>
  </div>

  <div class="row bg-info text-light">
    <div class="col-md-6 mycol">
      <h2>To be Devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devour}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-md-6 mycol">
      <h2>Victims so far!</h2>


      <ul>
        {{#each burgers}}
        {{#if devour}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>