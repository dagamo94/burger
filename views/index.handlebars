<div class="container">

  <div class="jumbotron jumbotron-fluid bg-dark text-light">
    <div class="container">
      <h1 class="display-4 text-center">Eat-Da-Burger</h1>
      <p class="lead text-center">This is a tasty burgah</p>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-6">
      <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4160.png" alt="tasty-burger">
    </div>
    <div class="col-md-6">

      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="mt-4 btn btn-light">Add burger</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>To be Devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devour}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-md-6">
      <h2>Devoured burgahs!</h2>


      <ul>
        {{#each burgers}}
        {{#if devour}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>